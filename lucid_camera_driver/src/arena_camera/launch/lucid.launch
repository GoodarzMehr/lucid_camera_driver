<?xml version="1.0"?>
<launch>
    <arg name="respawn" default="false" />
    <arg name="debug" default="false" />
    <arg name="node_name" default="lucid_camera_node" />
    <arg name="config_file" default="$(find arena_camera)/config/default.yaml" />

    <arg unless="$(arg debug)" name="launch_prefix" value="" />
    <arg     if="$(arg debug)" name="launch_prefix" value="gdb -ex run --args" />

    <!--Camera 1-->
    <node name="$(arg node_name)_1" pkg="arena_camera" type="arena_camera_node" output="screen"
          respawn="$(arg respawn)" launch-prefix="$(arg launch_prefix)">
        <remap from="$(arg node_name)_1/image_raw" to="/hardware_interface/camera/image_raw" />
        <remap from="$(arg node_name)_1/camera_info" to="/hardware_interface/camera/camera_info" />
        <remap from="$(arg node_name)_1/discovery" to="/hardware_interface/driver_discovery" />
        <param name="device_user_id" type="string" value="camera1"/>
    </node>
    <!--Camera 2-->
    <node name="$(arg node_name)_2" pkg="arena_camera" type="arena_camera_node" output="screen"
